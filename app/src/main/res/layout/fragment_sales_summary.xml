<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical"
     android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/readingLayout"
        android:visibility="visible"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:text="Closing Reading (Nozzle 1)"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="270dp"
                android:layout_weight="1"
                android:hint="Reading"
                android:textSize="14sp"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:layout_height="35dp"
                android:background="@drawable/edittextbg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:text="Closing Reading (Nozzle 2)"
                android:fontFamily="sans-serif"
                android:textSize="15sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="270dp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:hint="Reading"
                android:textColorHint="@color/colorAccent"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:layout_height="35dp"
                android:background="@drawable/edittextbg"/>
        </LinearLayout>
        <Button
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:text="send"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:id="@+id/sendReading"
            android:layout_marginTop="20dp"
            android:textColor="@color/text_color"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:background="@drawable/buttonbg"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="5dp"
            android:id="@+id/enterDetailLayout"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="Total Sales"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="5dp"
                android:textStyle="bold"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/colorAccent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Petrol "
                    android:gravity="start"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="3 Ltr"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Rs.210"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Diesel "
                    android:gravity="start"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="3 Ltr"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Rs.210"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Premium Petrol "
                    android:gravity="start"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="3 Ltr"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Rs.210"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Engine Oil"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="4 Ltr"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="Rs.210"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Credit Sales"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:layout_weight="1.3"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/colorAccent"/>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:hint="Full Tank"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="sans-serif"
                    android:id="@+id/full_tank"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="35dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:hint="111 Ltr"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif"
                    android:id="@+id/qty"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="35dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:hint="Rs."
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:fontFamily="sans-serif"
                    android:id="@+id/creditAmount"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:layout_height="35dp"/>
             </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Cash Sales"
                    android:textSize="15sp"
                    android:layout_weight="1.3"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/colorAccent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                     <EditText
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:hint="Rs."
                        android:textSize="12sp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif"
                        android:id="@+id/cashAmount"
                        android:inputType="number"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorAccent"
                        android:layout_height="35dp"
                        android:background="@drawable/edittextbg"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Petro Card Sales"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:layout_weight="1.3"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/colorAccent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                     <EditText
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:hint="Rs."
                        android:textSize="12sp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif"
                        android:id="@+id/petroAmount"
                        android:inputType="number"
                        android:paddingLeft="5dp"
                        android:textColor="@color/colorAccent"
                        android:layout_height="35dp"
                        android:background="@drawable/edittextbg"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:text=" ( Rs.)"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:layout_weight="1.3"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:hint="Rs.888"
                    android:textSize="14sp"
                     android:textColor="@color/colorAccent"
                    android:id="@+id/creditAmount1"
                    android:inputType="number"
                    android:paddingLeft="5dp"
                    android:fontFamily="sans-serif"
                    android:layout_height="35dp"
                    android:background="@drawable/edittextbg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Difference ( Rs.)"
                    android:fontFamily="sans-serif"
                    android:textSize="15sp"
                    android:layout_weight="1.3"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:paddingLeft="5dp"
                    android:fontFamily="sans-serif"
                    android:id="@+id/difference"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content"
                     />
            </LinearLayout>
            <Button
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:text="submit"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:id="@+id/sendDetail"
                android:layout_marginTop="20dp"
                android:textColor="@color/text_color"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:background="@drawable/buttonbg"/>

        </LinearLayout>
    </ScrollView>
 </LinearLayout>
